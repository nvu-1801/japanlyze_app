// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enum types
enum CheckinType {
  photo
  video
  caption
}

model User {
  id                 String               @id @default(uuid())
  email              String               @unique
  name               String?
  password           String?
  avatar             String?
  role               String               @default("user")
  isPremium          Boolean              @default(false)
  provider           String               @default("email")
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  
  // Quan há»‡ ngÆ°á»£c (Ä‘á»ƒ truy váº¥n ngÆ°á»£c tá»« User)
  payments           Payment[]
  decks              Deck[]
  translationHistory TranslationHistory[]
  exerciseProgress   ExerciseProgress[]
  posts              Post[]
  comments           Comment[]
  likes              Like[]
}

model Payment {
  id        String   @id @default(uuid())
  orderCode Int      @unique
  amount    Int
  status    String
  createdAt DateTime @default(now())
  
  userId    String
  // ğŸ‘‡ ThÃªm onDelete: Cascade
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// --- 1. FLASHCARDS ---
model Deck {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())

  userId      String
  // ğŸ‘‡ ThÃªm onDelete: Cascade
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  cards       Card[]
}

model Card {
  id        String   @id @default(uuid())
  front     String
  back      String
  example   String?
  isLearned Boolean  @default(false)
  createdAt DateTime @default(now())

  deckId    String
  // ÄÃ£ cÃ³ Cascade (XÃ³a bá»™ tháº» -> XÃ³a tháº» con) -> Tá»T
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

// --- 2. TRANSLATE HISTORY ---
model TranslationHistory {
  id         String   @id @default(uuid())
  sourceText String
  targetText String
  createdAt  DateTime @default(now())

  userId     String
  // ğŸ‘‡ ThÃªm onDelete: Cascade
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// --- 3. EXERCISES ---
model ExerciseProgress {
  id          String   @id @default(uuid())
  exerciseId  String
  score       Int
  completedAt DateTime @default(now())

  userId      String
  // ğŸ‘‡ ThÃªm onDelete: Cascade
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// --- 4. COMMUNITY ---
model Post {
  id        String   @id @default(uuid())
  content   String
  rating    Int      @default(5) // ğŸ‘ˆ ThÃªm rating (1-5 stars)
  createdAt DateTime @default(now())

  userId    String
  // ğŸ‘‡ ThÃªm onDelete: Cascade
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  comments  Comment[]
  likes     Like[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  postId    String
  // ÄÃ£ cÃ³ Cascade (XÃ³a bÃ i -> XÃ³a cmt) -> Tá»T
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  userId    String
  // ğŸ‘‡ ThÃªm onDelete: Cascade (XÃ³a user -> XÃ³a cmt cá»§a user Ä‘Ã³)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  postId    String
  // ÄÃ£ cÃ³ Cascade -> Tá»T
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  userId    String
  // ğŸ‘‡ ThÃªm onDelete: Cascade
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
}
